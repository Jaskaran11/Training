
<%= link_to('Back to List', books_path, :class => 'back-link') %>


<div class="books show">
  <%= image_tag @book.image if @book.image.attached? %>
  <%= render @book %>  
  <h2>Show Books</h2>

  <table summary="Book detailed view">
  <tr> 
    <th>Title:</th>
    <td><%= @book.title%></td>
  </tr>
  <tr>
    <th>Created</th>
    <td><%= @book.created_at%></td>
  </tr>
  <tr>
    <th>Updated</th>
    <td><%= @book.updated_at %></td>
  </tr>
  </table>
  <%= render @book %>
</div>