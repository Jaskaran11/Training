<center>
<div class="books index">
  <h2>Books</h2>
  <%= image_tag("book.jpg", alt: "Book image placeholder", :style => "width: 100px;height:100px") %><br>
  <%= link_to("Add New Book", new_book_path, :class => 'action_new') %>
  <div class = "books show">
  <div class = "image-body">
  <div class ="row">
    <%= image_tag book.image , class: 'img-fluid' if book.image.attached?  %>
  </div>
  <div class="col-lg-7">
    <%= render book %>
  </div>
  </div>
  </div>
  <table class="listing" summary="Book list">
    <tr class="header">
      <th>Book</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Actions</th>
    </tr>
    <% @book.each do |book| %>
    <tr>
    <td><%= book.title%></td>
    <td><%= book.price%></td>
    <td><%= book.rating%></td>
    <td class="actions">
      <%= link_to("Show", book_path(book), :class => 'action show') %>
      <%= link_to("Edit", edit_book_path(book) , :class => 'action edit') %>
      <%= link_to("Delete", delete_book_path(book), :class => 'action delete') %>
    </td>
    </tr>
    <% end %>
  </table>
</div>
</center>