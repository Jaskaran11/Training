<div class="user_index">
  <%= link_to("Add New User", users_new_path, :class => 'action_new') %>
  <div class="user_show">
    <table class="listing" summary="User list" >
      <tr class="header">
        <th>Name</th>
        <th>Address:</th>
      </tr>
    <% @user.each do |user| %>
    <tr>
    <td><%= user.name %></td>
    <td><%= user.address %></td>
    </tr>
    <% end %>
    </table>
</div>
</div>