<%= link_to("New User", new_user_path) %>

<%= form_tag(search_users_path, method: :get, remote: true) do %>
Name
<%= text_field_tag :name, params[:name] %>
<%= submit_tag "Search" %>
<% end %>

<table id="summary">
  <tr>
  <th>Name</th>
  <th>Gender</th>
  <th>Country</th>
  </tr>
  <% @user.each do |user| %>
  <tr>
  <td><%= user.name %></td>
  <td><%= user.gender %></td>
  <td><%= user.country %></td>
  <td class="actions">
  <%= link_to("Show", user_path(user)) %>
  <%= link_to("Edit", edit_user_path(user)) %>
  <%= link_to("Delete", user_path(user), :method => :delete) %>
  </tr>
  <% end %>
  </table>
