<%= form_with model: author do |form| %>
<% if @author.errors.any? %>
<% @author.errors.full_messages.each do |message| %>
  <p><%= message %></p>
  <% end %>
<% end %>

<div>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</div>
<div>
  <%= form.label :email %><br>
  <%= form.text_field :email %>
</div>
<div>
  <%= form.label :phone_no %><br>
  <%= form.text_field :phone_no %>
</div>
<div>
  <%= form.label :dob %><br>
  <%= form.text_field :dob %>
</div>
<div>
  <%= form.label :hobby %><br>
  <%= form.text_field :hobby %>
</div>
<div>
  <%= form.label :skill %><br>
  <%= form.text_field :skill %>
</div>

<div>
  <%= form.submit %>
  </div>
<% end %>
